<p id="notice"><%= notice %></p>

<h1>Listing Slides</h1>

<div id="slider" class="flexslider">
  <ul class="slides">
    <% @slides.each do |slide| %>
      <li><%= image_tag(slide.image) %></li>
    <% end %>
  </ul>
</div>

<div id="carousel" class="flexslider">
  <ul class="slides">
    <% @slides.each do |slide| %>
      <li><%= image_tag(slide.image) %></li>
    <% end %>
  </ul>
</div>

<%= link_to 'New Slide', new_slide_path %>
